{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@validators/*": ["validators/*"],
      "@routes/*": ["routes/*"],
      "@config/*": ["config/*"],
      "@database/*": ["database/*"],
      "@email-templates/*": ["email-templates/*"],
      "@middlewares/*": ["middlewares/*"],
      "@models/*": ["models/*"],
      "@public/*": ["public/*"],
      "@repositories/*": ["repositories/*"],
      "@services/*": ["services/*"],
      "@rabbitmq/*": ["rabbitmq/*"],
      "@socket/*": ["socket/*"],
      "@utils/*": ["utils/*"],
      "@interfaces/*": ["interfaces/*"],
      "@adapters/*": ["adapters/*"]
    },
    "module": "commonjs",
    "target": "ES2020",
    "checkJs": false
  },
  "include": [
    ".",
    "controllers",
    "services",
    "repositories",
    "models",
    "config",
    "routes",
    "middlewares",
    "validators",
    "utils",
    "adapters",
    "rabbitmq",
    "socket",
    "database",
    "interfaces"
  ],
  "exclude": ["node_modules"]
}
